<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTrak" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_600</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_gray_900</item>
        <!-- Heading Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="cardBackgroundColor">@color/dark_gray</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="strokeColor">@color/blue_gray_600</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="iconSize">24dp</item>
    </style>
</resources>